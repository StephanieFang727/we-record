/* pages/todos.wxss */
.todo_date {
  display: flex;
  width: 100%;
  justify-content: center;
  margin-bottom: 10rpx;
  color: green;
}
.todo_title {
  display: flex;
  width: 100%;
  /*  padding-bottom: 20rpx; */
  border-bottom: 1rpx solid #ccc;
}
.todo_title .status {
  display: flex;
  width: 80%;
  justify-content: space-around;
  color: #66cccc;
}
.todo_item {
  display: flex;
  height: 80rpx;
  width: 100%;
  align-items: center;
  /* padding: 20rpx 0; */
  border-bottom: 1px solid #ddd;
}
.todo_item text{
  margin-left: 20rpx;
 
}
text.active {
  color: #009999;
}
.todoForm-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 30vh;
  background-color: white;
}






























