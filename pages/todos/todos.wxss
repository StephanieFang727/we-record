/* pages/todos.wxss */
.todo_date {
  display: flex;
  width: 100%;
  justify-content: center;
  margin-bottom: 40rpx;
  color: green;
}
.todo_title {
  display: flex;
  width: 100%;
  /*  padding-bottom: 20rpx; */
  border-bottom: 1rpx solid #ccc;
}
.todo_title .status {
  display: flex;
  width: 80%;
  justify-content: space-around;
  color: #aaa;
}
.todo_item {
  position: relative;
  display: flex;
  height: 130rpx;
  width: 100%;
  align-items: center;
  /* padding: 20rpx 0; */
  border-bottom: 1px solid #ddd;
}
.todo_item-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  position: absolute;
  z-index: 2;
  background-color: #eee;
  transition: left .3s;
}
.todo_item text{
  margin-left: 20rpx;
 
}
text.active {
  color: #009999;
}
.todoForm-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 30vh;
  background-color: white;
  z-index: 3;
}
.todo_edit-btn {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 160rpx;
  background-color: #66cccc;
}






























