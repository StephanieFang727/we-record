.todo_date {
  display: flex;
  width: 100%;
  justify-content: center;
  margin-bottom: 40rpx;
  font-weight: 1000;
  font-size: large;
}
.todo_title {
  display: flex;
  width: 100%;
  /*  padding-bottom: 20rpx; */
  /* border-bottom: 1rpx solid #ccc; */
  /* border-bottom: 2px solid #2C3E50; */
}
.todo_title .status {
  display: flex;
  width: 80%;
  justify-content: space-around;
  /* color: #aaa; */
  font-weight: 800;
  color: #bbb;
}
/* æ¡† */
.todo_list {
  width: 100%;
  height: 150rpx;
  position: relative;
  /* padding: 0 16rpx; */
  margin: 16rpx 0;
  overflow: hidden;
}
.todo_item {
  position: absolute;
  /* display: flex; */
  height: 100%;
  /* width: 100%; */
  /* align-items: center; */
  /* overflow: hidden; */
  /* padding: 0 16rpx; */
  /* border-bottom: 4px solid #2C3E50; */
  transition: left .3s;
}
.todo_item-content {
  float: left;
  width: 700rpx;
  height: 100%;
  margin: 0 16rpx ;
  /* left: 16rpx; */
  display: flex;
  align-items: center;
  /* padding: 0rpx 32rpx; */
  background-color: #fff;
  border-radius: 10rpx;
  /* transition: left .3s; */
  /* border-left: 20rpx solid black; */
}
.todo_item-content text{
  margin-left: 20rpx;
  /* color: rgb(255,255,255); */
}
text.active {
  color: #34494E;
}
.todoForm-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 30vh;
  border-bottom: 1rpx solid #66cccc;
  background-color: white;
  z-index: 3;
}
.todo-btn_group {
  float: left;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  /* background-color: #66cccc; */
}
.todo-btn_item{
  height: 38px;
  width: 38px;
  border-radius: 50%;
  vertical-align: middle;
  text-align: center;
  margin: 0 10rpx;
}
.todoForm-btn_group {
  position: absolute;
  right: 32rpx;
}
.todoForm-btn_group .btn{
  margin-left: 10rpx;
}
.todo_edit-btn {
  background-color: #66cccc;
}
.todo_urgent-btn {
  background-color: #FAED26;
}






























