/* pages/todos.wxss */
.todo_date {
  display: flex;
  width: 100%;
  justify-content: center;
  margin-bottom: 40rpx;
  font-weight: 1000;
  font-size: large;
}
.todo_title {
  display: flex;
  width: 100%;
  /*  padding-bottom: 20rpx; */
  /* border-bottom: 1rpx solid #ccc; */
  border-bottom: 2px solid #2C3E50;
}
.todo_title .status {
  display: flex;
  width: 80%;
  justify-content: space-around;
  /* color: #aaa; */
  font-weight: 800;
  color: #bbb;
}
.todo_item {
  position: relative;
  display: flex;
  height: 150rpx;
  width: 100%;
  align-items: center;
  overflow: hidden;
  border-bottom: 4px solid #2C3E50;
}
.todo_item-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  position: absolute;
  padding: 0rpx 32rpx;
  z-index: 2;
  background-color: #34494E;
  transition: left .3s;
}
.todo_item-content text{
  margin-left: 20rpx;
  color: rgb(255,255,255);
}
text.active {
  color: #34494E;
}
.todoForm-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 30vh;
  background-color: white;
  z-index: 3;
}
.todo-btn_group {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 200rpx;
  /* background-color: #66cccc; */
}
.todo-btn_item{
  height: 38px;
  width: 38px;
  border-radius: 50%;
  vertical-align: middle;
  text-align: center;
  margin: 0 10rpx;
}
.todoForm-btn_group {
  position: absolute;
  right: 32rpx;
}
.todoForm-btn_group .btn{
  margin-left: 10rpx;
}
.todo_edit-btn {
  background-color: #66cccc;
}
.todo_urgent-btn {
  background-color: #FAED26;
}






























